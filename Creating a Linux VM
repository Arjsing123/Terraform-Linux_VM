  name     = "RG7"
  location = "North Europe"
}
# Create a Storage account

resource "azurerm_storage_account" "appstore400009079998" {
  name                     = "appstore400009079998"
  resource_group_name      = "RG7"
  location                 = "North Europe"
  account_tier             = "Standard"
  account_replication_type = "LRS"  
